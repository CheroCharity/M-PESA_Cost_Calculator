.history {
  margin-top: 40rpx;
  border-top: 1rpx solid #ddd;
  padding-top: 20rpx;
}

.transaction {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.transaction text {
  display: block;
  font-size: 26rpx;
  color: #333;
}

.transaction .time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
